package wipro_java_project_oops;

public class Sedan extends Car {
    private boolean sunroof;

    // Constructor
    public Sedan(String make, String model, int year, boolean sunroof) {
        super(make, model, year);  // Calling the parent constructor
        this.sunroof = sunroof;
    }

    // Getter and Setter for sunroof
    public boolean hasSunroof() {
        return sunroof;
    }

    public void setSunroof(boolean sunroof) {
        this.sunroof = sunroof;
    }

    // Overriding the displayDetails method to include sunroof information
    @Override
    public void displayDetails() {
        super.displayDetails();  // Calling the parent class method
        System.out.println("Sunroof: " + (sunroof ? "Yes" : "No"));
    }
}

