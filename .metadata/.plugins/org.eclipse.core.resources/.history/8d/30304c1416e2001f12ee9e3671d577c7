package wipro_java_project_oops;

public class Innova extends Car {
    
    // Constructor matching the parent class Car
    public Innova(String make, String model, int year) {
        super( model, year); 
    }


    @Override
    public void displayCarDetails() {
        System.out.println("This is an Innova: " + getModel() + " from year " + getYear());
    }

    public static void main(String[] args) {
        // Creating an instance of Innova
        Car innovaCar = new Innova("Toyota", "Innova Crysta", 2022);
        
        // Using the overridden method correctly
        innovaCar.displayCarDetails();  
    }
}

